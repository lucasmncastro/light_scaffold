<h1>New <%= resource_class.human_name %></h1>

<%= error_messages_for resource %>

<% form_for(resource, :url => collection_url) do |f| %>
  <% begin %>
    <%= render :partial => 'form', :locals => { :f => f } %>
  <% rescue %>
    <%= render :partial => 'scaffold/form', :locals => { :f => f } %>
  <% end %>

  <p>
    <%= submit_tag "Create", :class => 'create' %>
  </p>
<% end %>

<p>
  <%= link_to 'Back', collection_url, :class => 'back' %>
</p>
