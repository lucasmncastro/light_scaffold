<h1>Editar <%= object_label %></h1>

<%= error_messages_for model_name %>

<% form_for(model_name, :url => object_url, :html => { :method => :put }) do |f| %>
  <% begin %>
    <%= render :partial => 'form', :locals => { :f => f } %>
  <% rescue %>
    <%= render :partial => 'scaffold/form', :locals => { :f => f } %>
  <% end %>

  <p>
    <%=submit_tag "Atualizar", :class => 'update' %>
  </p>
<% end %>

<p>
  <%= link_to 'Exibir', object_url, :class => 'show' %> |
  <%= link_to 'Voltar', collection_url, :class => 'back' %>
</p>
